<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.nuxeo</groupId>
    <artifactId>nuxeo-addons-parent</artifactId>
    <version>5.8-SNAPSHOT</version>
    <relativePath>pom.xml</relativePath>
  </parent>

  <artifactId>nuxeo-optional-addons-parent</artifactId>
  <name>Nuxeo optional Addons parent POM</name>
  <packaging>pom</packaging>
  <description>Convenient parent POM for building optional addons (they are not
  included in the default full build). Thus they are not deprecated.</description>

  <!-- dependencyManagement of optional addons must also be defined in pom.xml but
    they must use a dedicated property, not nuxeo.addons.version -->
  <properties>
    <nuxeo.jbpm.version>5.8-SNAPSHOT</nuxeo.jbpm.version>
     </properties>
   
    <modules>
     <module>nuxeo-platform-jbpm</module>
     <module>nuxeo-platform-user-dashboard-compat</module>
    </modules>
  
    <dependencyManagement>
     <dependencies>
      <!-- jBPM -->
      <dependency>
       <groupId>org.nuxeo.ecm.platform</groupId>
       <artifactId>nuxeo-platform-jbpm-api</artifactId>
       <version>${nuxeo.jbpm.version}</version>
      </dependency>
      <dependency>
       <groupId>org.nuxeo.ecm.platform</groupId>
       <artifactId>nuxeo-platform-jbpm-automation</artifactId>
       <version>${nuxeo.jbpm.version}</version>
      </dependency>
      <dependency>
       <groupId>org.nuxeo.ecm.platform</groupId>
       <artifactId>nuxeo-platform-jbpm-core</artifactId>
       <version>${nuxeo.jbpm.version}</version>
      </dependency>
      <dependency>
       <groupId>org.nuxeo.ecm.platform</groupId>
       <artifactId>nuxeo-platform-jbpm-test</artifactId>
       <version>${nuxeo.jbpm.version}</version>
       <scope>test</scope>
      </dependency>
      <dependency>
       <groupId>org.nuxeo.ecm.platform</groupId>
       <artifactId>nuxeo-platform-jbpm-web</artifactId>
       <version>${nuxeo.jbpm.version}</version>
      </dependency>
      <dependency>
       <groupId>org.nuxeo.ecm.platform</groupId>
       <artifactId>nuxeo-platform-jbpm-task-migration</artifactId>
       <version>${nuxeo.jbpm.version}</version>
      </dependency>
      <dependency>
       <groupId>org.nuxeo.ecm.platform</groupId>
       <artifactId>nuxeo-platform-jbpm-gadgets</artifactId>
       <version>${nuxeo.jbpm.version}</version>
      </dependency>
     </dependencies>
    </dependencyManagement>
</project>