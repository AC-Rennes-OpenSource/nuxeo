<project name="nuxeo-assembly"
         default="build"
         xmlns:nx="urn:nuxeo-build"
         xmlns:artifact="urn:nuxeo-artifact">
  <taskdef resource="org/nuxeo/build/antlib.xml" uri="urn:nuxeo-build" />
  <taskdef resource="org/nuxeo/build/artifact/antlib.xml"
           uri="urn:nuxeo-artifact" />

  <target name="init" unless="init.done">
    <property name="outdir" value="${maven.project.build.directory}" />
    <property name="stagedir" value="${outdir}/stage" />
    <antcall target="expand" />
    <property name="init.done" value="true" />
  </target>

  <target name="expand" unless="no.build">
    <artifact:expand depth="3" />
  </target>

  <target name="build" depends="init" unless="no.build">
    <echo>Building JBoss distribution...</echo>
    <property name="jboss" value="${stagedir}/nuxeo-dam-jboss" />

    <unzip dest="${stagedir}">
      <artifact:resolveFile key="org.nuxeo.ecm.distribution:nuxeo-distribution-jboss:${nuxeo.distribution.version}:zip"
                            classifier="nuxeo-dm" />
    </unzip>
    <nx:rename from="${stagedir}/nuxeo-dm*" to="${jboss}" />
    <delete dir="${jboss}/server/default/deploy/nuxeo.ear" />
    <unzip dest="${jboss}/server/default/deploy/nuxeo.ear">
      <artifact:resolveFile key="org.nuxeo.dam:nuxeo-dam-ear:${maven.project.version}:zip" />
    </unzip>
    <chmod dir="${jboss}/bin" perm="750"
      includes="*.sh,*ctl" />

    <antcall target="copy-resources"/>

    <antcall target="delete-resources"/>

    <zip destfile="${outdir}/${maven.project.artifactId}-${maven.project.version}.zip"
         basedir="${stagedir}"
         includes="nuxeo-dam-jboss/**" />
    <artifact:attach file="${outdir}/${maven.project.artifactId}-${maven.project.version}.zip"
                     target="${maven.project.groupId}:${maven.project.artifactId}"
                     type="zip" />

    <antcall target="clean"/>
  </target>

  <target name="copy-resources">
    <concat destfile="${jboss}/templates/common/config/nuxeo.properties" append="true">
      <filelist dir="src/main/resources/config" files="nuxeo.properties"/>
    </concat>
    <concat destfile="${jboss}/bin/nuxeo.conf" append="true">
      <filelist dir="src/main/resources/config" files="nuxeo.conf"/>
    </concat>
  </target>

  <target name="delete-resources">
    <delete file="${jboss}/templates/common/config/nxrelations-default-jena-bundle.xml" />
    <delete file="${jboss}/templates/common/config/nxmail-scheduler-config.xml" />
    <delete file="${jboss}/templates/common/config/default-opensocial-config.xml" />
    <delete file="${jboss}/templates/common/config/opensocial.properties" />
  </target>

  <target name="clean">
    <delete dir="${stagedir}" />
  </target>

</project>
