<project name="nuxeo-assembly"
         default="build"
         xmlns:nx="urn:nuxeo-build"
         xmlns:artifact="urn:nuxeo-artifact">

  <taskdef resource="org/nuxeo/build/antlib.xml" uri="urn:nuxeo-build" />
  <taskdef resource="org/nuxeo/build/artifact/antlib.xml"
           uri="urn:nuxeo-artifact" />

  <target name="init" unless="init.done">
    <condition property="no.build">
      <and>
        <isset property="maven.profile.tomcat" />
        <not>
          <or>
            <isset property="maven.profile.ear" />
            <isset property="maven.profile.jboss" />
            <isset property="maven.profile.all-distributions" />
          </or>
        </not>
      </and>
    </condition>

    <property name="outdir" value="${maven.project.build.directory}" />
    <property name="stagedir" value="${outdir}/stage" />
    <antcall target="expand" />
    <property name="init.done" value="true" />
  </target>

  <target name="expand" unless="no.build">
    <artifact:nuxeo-expand />
    <!-- <artifact:expand depth="3" /> -->
    <!--<artifact:print output="dependency-tree.log" />-->
  </target>

  <target name="build" depends="init,cleanstage" unless="no.build">
    <echo>Building DAM EAR</echo>
    <property name="nuxeo.ear" value="${stagedir}/nuxeo.ear" />
    <mkdir dir="${nuxeo.ear}" />

    <unzip dest="${nuxeo.ear}">
      <artifact:resolveFile key="org.nuxeo.ecm.distribution:nuxeo-distribution-dm:${nuxeo.distribution.version}:zip" />
      <patternset>
        <exclude name="**/bundles/nuxeo-platform-webapp-${nuxeo.distribution.version}*" />
        <exclude name="**/bundles/nuxeo-platform-webapp-core*" />

        <exclude name="**/bundles/nuxeo-platform-comment-web*" />
        <exclude name="**/bundles/nuxeo-platform-directory-web*" />
        <exclude name="**/bundles/nuxeo-platform-ear*" />
        <exclude name="**/bundles/nuxeo-platform-forum*" />
        <exclude name="**/bundles/nuxeo-platform-imaging-dm*" />
        <exclude name="**/bundles/nuxeo-platform-mail*" />
        <exclude name="**/bundles/nuxeo-platform-notification-web*" />
        <exclude name="**/bundles/nuxeo-opensocial*" />
        <exclude name="**/bundles/nuxeo-platform-publish*" />
        <exclude name="**/bundles/nuxeo-platform-spaces*" />
        <exclude name="**/bundles/nuxeo-platform-syndication*" />
        <exclude name="**/bundles/nuxeo-platform-tag*" />
        <exclude name="**/bundles/nuxeo-platform-virtualnavigation*" />
        <exclude name="**/bundles/nuxeo-platform-workflow*" />
        <exclude name="**/bundles/nuxeo-platform-wss*" />

        <exclude name="**/bundles/nuxeo-webengine-gadgets*" />
        <exclude name="**/bundles/nuxeo-webengine-admin*" />
        <exclude name="**/bundles/nuxeo-webengine-blogs*" />
        <exclude name="**/bundles/nuxeo-webengine-sites*" />
        <exclude name="**/bundles/nuxeo-webengine-ui*" />
        <exclude name="**/bundles/nuxeo-user-dashboard*" />
        <exclude name="**/bundles/nuxeo-user-settings*" />

        <exclude name="**/bundles/nuxeo-platform-faceted-search-dm*" />
        <exclude name="**/bundles/nuxeo-platform-login-disgest*" />
        <exclude name="**/bundles/nuxeo-platform-wi-backend*" />

        <!-- OpenSocial libs -->
        <exclude name="**/lib/shindig*" />
        <exclude name="**/lib/caja*" />

        <exclude name="**/templates/common/config/nxmail-scheduler-config.xml" />
        <exclude name="**/templates/common/config/default-opensocial-config.xml" />
        <exclude name="**/templates/common/config/opensocial.properties" />
      </patternset>
    </unzip>

    <copy todir="${nuxeo.ear}/bundles" overwrite="true">
      <artifact:set>
        <includes>
          <artifact groupId="org.nuxeo.dam*" />
          <artifact artifactId="nuxeo-platform-video-*" />
          <artifact artifactId="nuxeo-platform-audio-core" />
          <artifact artifactId="nuxeo-platform-categorization-*" />
          <artifact artifactId="nuxeo-platform-importer-core" />
        </includes>
        <excludes>
          <artifact artifactId="nuxeo-dam-importer-jaxrs" />
        </excludes>
      </artifact:set>
    </copy>

    <antcall target="third-party-libraries" />

    <zip destfile="${outdir}/${maven.project.artifactId}-${maven.project.version}-ear.zip"
         basedir="${nuxeo.ear}" />

    <artifact:attach file="${outdir}/${maven.project.artifactId}-${maven.project.version}-ear.zip"
                     target="${maven.project.groupId}:${maven.project.artifactId}"
                     classifier="ear"
                     type="zip" />

    <delete failonerror="false" dir="${outdir}/nuxeo.ear" />
    <copy todir="${outdir}/nuxeo.ear">
      <fileset dir="${nuxeo.ear}" />
    </copy>
  </target>

  <target name="third-party-libraries">
    <copy todir="${nuxeo.ear}/lib" overwrite="true">
      <artifact:resolveFile key="de.schlichtherle.io:truezip" />
      <artifact:resolveFile key="org.apache.derby:derby" />
      <artifact:resolveFile key="commons-el:commons-el" />
      <artifact:resolveFile key="org.jboss.el:jboss-el" />
    </copy>
  </target>

  <target name="cleanstage">
    <delete dir="${stagedir}" />
  </target>

</project>
