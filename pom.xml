<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <groupId>org.nuxeo</groupId>
    <artifactId>nuxeo-addons-parent</artifactId>
    <version>5.6-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.nuxeo.template.rendering</groupId>
  <artifactId>nuxeo-template-rendering-parent</artifactId>
  <name>Nuxeo Template Rendering Parent</name>
  <description>Nuxeo Template Rendering Module</description>
  <packaging>pom</packaging>

  <properties>
    <nuxeo.templates.version>5.6-SNAPSHOT</nuxeo.templates.version>
  </properties>

  <modules>
    <module>nuxeo-template-rendering-api</module>
    <module>nuxeo-template-rendering-core</module>
    <module>nuxeo-template-rendering-xdocreport</module>
    <module>nuxeo-template-rendering-jxls</module>
    <module>nuxeo-template-rendering-jod</module>
    <module>nuxeo-template-rendering-sandbox</module>
    <module>nuxeo-template-rendering-web</module>
    <module>nuxeo-template-rendering-jaxrs</module>
    <module>nuxeo-template-rendering-samples</module>
    <module>nuxeo-template-rendering-package</module>
  </modules>

  <dependencyManagement>
   <dependencies>
    <dependency>
     <groupId>org.nuxeo.template.rendering</groupId>
     <artifactId>nuxeo-template-rendering-api</artifactId>
     <version>${nuxeo.templates.version}</version>
    </dependency>
    <dependency>
     <groupId>org.nuxeo.template.rendering</groupId>
     <artifactId>nuxeo-template-rendering-core</artifactId>
     <version>${nuxeo.templates.version}</version>
    </dependency>
    <dependency>
      <groupId>org.nuxeo.template.rendering</groupId>
      <artifactId>nuxeo-template-rendering-xdocreport</artifactId>
     <version>${nuxeo.templates.version}</version>
    </dependency>
    <dependency>
      <groupId>org.nuxeo.template.rendering</groupId>
      <artifactId>nuxeo-template-rendering-jxls</artifactId>
     <version>${nuxeo.templates.version}</version>
    </dependency>
    <dependency>
      <groupId>org.nuxeo.template.rendering</groupId>
      <artifactId>nuxeo-template-rendering-jaxrs</artifactId>
     <version>${nuxeo.templates.version}</version>
    </dependency>
    <dependency>
      <groupId>org.nuxeo.template.rendering</groupId>
      <artifactId>nuxeo-template-rendering-web</artifactId>
     <version>${nuxeo.templates.version}</version>
    </dependency>
    <dependency>
      <groupId>org.nuxeo.template.rendering</groupId>
      <artifactId>nuxeo-template-rendering-samples</artifactId>
     <version>${nuxeo.templates.version}</version>
    </dependency>
     <!-- Rendition stuffs -->
    <dependency>
      <groupId>org.nuxeo.ecm.platform</groupId>
      <artifactId>nuxeo-platform-rendition-api</artifactId>
      <version>${nuxeo.templates.version}</version>
    </dependency>
    <dependency>
      <groupId>org.nuxeo.ecm.platform</groupId>
      <artifactId>nuxeo-platform-rendition-web</artifactId>
      <version>${nuxeo.templates.version}</version>
    </dependency>
    <dependency>
      <groupId>org.nuxeo.ecm.platform</groupId>
      <artifactId>nuxeo-platform-rendition-core</artifactId>
      <version>${nuxeo.templates.version}</version>
    </dependency>
    <dependency>
      <groupId>org.nuxeo.ecm.platform</groupId>
      <artifactId>nuxeo-platform-rendition-publisher</artifactId>
      <version>${nuxeo.templates.version}</version>
    </dependency>

   </dependencies>
  </dependencyManagement>
 
  <repositories>
    <repository>
      <id>public</id>
      <url>http://maven.nuxeo.org/nexus/content/groups/public</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </repository>
    <repository>
      <id>public-snapshot</id>
      <url>http://maven.nuxeo.org/nexus/content/groups/public-snapshot</url>
      <releases>
        <enabled>false</enabled>
      </releases>
      <snapshots>
        <updatePolicy>always</updatePolicy>
        <enabled>true</enabled>
      </snapshots>
    </repository>
  </repositories>

</project>

