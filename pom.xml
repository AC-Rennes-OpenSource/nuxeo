<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.nuxeo.ecm.platform</groupId>
    <artifactId>nuxeo-features-parent</artifactId>
    <version>5.2.1-SNAPSHOT</version>
  </parent>

  <groupId>org.nuxeo.dam</groupId>
  <artifactId>nuxeo-dam-parent</artifactId>
  <version>1.0-SNAPSHOT</version>
  <name>Nuxeo DAM Parent</name>
  <packaging>pom</packaging>
  <description>Nuxeo DAM Parent</description>

  <modules>
    <module>nuxeo-dam-api</module>
    <module>nuxeo-dam-core</module>
    <module>nuxeo-dam-facade</module>
    <module>nuxeo-dam-webapp-core</module>
    <module>nuxeo-dam-webapp</module>
    <module>nuxeo-dam-ear</module>
  </modules>

  <properties>
    <nuxeo.dam.version>${pom.version}</nuxeo.dam.version>
    <nuxeo.platform.version>5.2.1-SNAPSHOT</nuxeo.platform.version>
    <nuxeo.theme.version>5.2.1-SNAPSHOT</nuxeo.theme.version>
    <nuxeo.features.version>5.2.1-SNAPSHOT</nuxeo.features.version>
    <nuxeo.webengine.version>5.2.1-SNAPSHOT</nuxeo.webengine.version>
    <nuxeo.services.version>5.2.1-SNAPSHOT</nuxeo.services.version>
    <!-- Custom version -->
    <nuxeo.dam.jsf.version>5.2.1-NXP-3610-SNAPSHOT</nuxeo.dam.jsf.version>
    <nuxeo.dam.dm.version>5.2.1-NXP-3610-SNAPSHOT</nuxeo.dam.dm.version>
  </properties>

  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>org.nuxeo.dam</groupId>
        <artifactId>nuxeo-dam-api</artifactId>
        <version>${nuxeo.dam.version}</version>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.dam</groupId>
        <artifactId>nuxeo-dam-core</artifactId>
        <version>${nuxeo.dam.version}</version>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.dam</groupId>
        <artifactId>nuxeo-dam-facade</artifactId>
        <version>${nuxeo.dam.version}</version>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.dam</groupId>
        <artifactId>nuxeo-dam-test</artifactId>
        <version>${nuxeo.dam.version}</version>
        <scope>test</scope>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.dam</groupId>
        <artifactId>nuxeo-dam-webapp-core</artifactId>
        <version>${nuxeo.dam.version}</version>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.dam</groupId>
        <artifactId>nuxeo-dam-webapp</artifactId>
        <version>${nuxeo.dam.version}</version>
      </dependency>

      <dependency>
        <groupId>org.nuxeo.runtime</groupId>
        <artifactId>nuxeo-runtime-deploy</artifactId>
        <version>${nuxeo.runtime.version}</version>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.runtime</groupId>
        <artifactId>nuxeo-runtime-jetty-adapter</artifactId>
        <version>${nuxeo.runtime.version}</version>
      </dependency>

      <dependency>
        <groupId>org.nuxeo.ecm.platform</groupId>
        <artifactId>nuxeo-platform</artifactId>
        <type>ejb</type>
        <version>${nuxeo.services.version}</version>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.ecm.platform</groupId>
        <artifactId>nuxeo-platform-actions-core</artifactId>
        <type>ejb</type>
        <version>${nuxeo.services.version}</version>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.ecm.platform</groupId>
        <artifactId>nuxeo-platform-ear</artifactId>
        <version>${nuxeo.platform.version}</version>
        <type>pom</type>
      </dependency>
    <dependency>
      <groupId>org.nuxeo.ecm.platform</groupId>
      <artifactId>nuxeo-platform-imaging-api</artifactId>
      <version>${nuxeo.features.version}</version>
    </dependency>
    <dependency>
      <groupId>org.nuxeo.ecm.platform</groupId>
      <artifactId>nuxeo-platform-imaging-core</artifactId>
      <version>${nuxeo.features.version}</version>
    </dependency>
    <dependency>
      <groupId>org.nuxeo.ecm.platform</groupId>
      <artifactId>nuxeo-platform-imaging-facade</artifactId>
      <version>${nuxeo.features.version}</version>
    </dependency>
    <dependency>
      <groupId>org.nuxeo.ecm.platform</groupId>
      <artifactId>nuxeo-platform-imaging-preview</artifactId>
      <version>${nuxeo.features.version}</version>
    </dependency>
    <dependency>
      <groupId>org.nuxeo.ecm.platform</groupId>
      <artifactId>nuxeo-platform-imaging-web</artifactId>
      <version>${nuxeo.features.version}</version>
    </dependency>
    <dependency>
      <groupId>org.nuxeo.ecm.platform</groupId>
      <artifactId>nuxeo-platform-imaging-convert</artifactId>
      <version>${nuxeo.features.version}</version>
    </dependency>
      <dependency>
        <groupId>org.nuxeo.ecm.platform</groupId>
        <artifactId>nuxeo-jbossws-wrapper</artifactId>
        <version>4.0.5.GA</version>
      </dependency>

      <!-- Dependencies on our custom branch in Nuxeo -->
      <dependency>
        <groupId>org.nuxeo.ecm.platform</groupId>
        <artifactId>nuxeo-platform-webapp-base</artifactId>
        <version>${nuxeo.dam.jsf.version}</version>
      </dependency>

    <dependency>
      <groupId>truezip</groupId>
      <artifactId>truezip</artifactId>
      <version>6.6</version>
    </dependency>
    </dependencies>
  </dependencyManagement>

  <repositories>
    <repository>
      <id>public</id>
      <url>http://maven.nuxeo.org/public</url>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </repository>
    <repository>
      <id>public-snapshot</id>
      <url>http://maven.nuxeo.org/public-snapshot</url>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </repository>
  </repositories>

  <pluginRepositories>
    <pluginRepository>
      <id>public</id>
      <url>http://maven.nuxeo.org/public</url>
      <releases>
        <enabled>true</enabled>
      </releases>
    </pluginRepository>
    <pluginRepository>
      <id>public-snapshot</id>
      <url>http://maven.nuxeo.org/public-snapshot</url>
      <name>Nuxeo virtual snapshot repository</name>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </pluginRepository>
  </pluginRepositories>
</project>
