<?xml version="1.0"?>
<component name="org.nuxeo.ecm.platform.routing.dm.layouts.webapp">

  <require>org.nuxeo.ecm.platform.routing.layouts.webapp</require>


  <extension target="org.nuxeo.ecm.platform.forms.layout.WebLayoutManager"
    point="layouts">

    <layout name="task_step">
      <templates>
        <template mode="any">/layouts/layout_default_template.xhtml
        </template>
      </templates>
      <rows>
        <row>
          <widget>actors</widget>
        </row>
        <row>
          <widget>createOneTaskPerActors</widget>
        </row>
        <row>
          <widget>directive</widget>
        </row>
        <row>
          <widget>comment</widget>
        </row>
        <row>
          <widget>dueDate</widget>
        </row>
        <row>
          <widget>automaticValidation</widget>
        </row>
      </rows>
      <widget name="actors" type="template">
        <fields>
          <field>tkst:actors</field>
        </fields>
        <labels>
          <label mode="any"></label>
        </labels>
        <properties mode="any">
          <property name="template">
            /widgets/user_suggestion_widget_template.xhtml
          </property>
        </properties>
      </widget>
      <widget name="directive" type="text">
        <translated>true</translated>
        <fields>
          <field>tkst:directive</field>
        </fields>
        <properties widgetMode="edit">
          <property name="styleClass">dataInputText</property>
        </properties>
      </widget>
      <widget name="comment" type="textarea">
        <translated>true</translated>
        <fields>
          <field>tkst:comment</field>
        </fields>
        <properties widgetMode="edit">
          <property name="styleClass">dataInputText</property>
        </properties>
      </widget>
      <widget name="dueDate" type="datetime">
        <translated>true</translated>
        <fields>
          <field>tkst:dueDate</field>
        </fields>
        <properties widgetMode="view">
          <property name="pattern">#{nxu:basicDateAndTimeFormater()}
          </property>
        </properties>
        <properties widgetMode="edit">
          <property name="format">#{nxu:basicDateAndTimeFormater()}
          </property>
        </properties>
      </widget>
      <widget name="automaticValidation" type="checkbox">
        <translated>true</translated>
        <fields>
          <field>tkst:automaticValidation</field>
        </fields>
      </widget>
      <widget name="createOneTaskPerActors" type="checkbox">
        <translated>true</translated>
        <fields>
          <field>tkst:createOneTaskPerActors</field>
        </fields>
      </widget>
    </layout>

  </extension>

</component>
