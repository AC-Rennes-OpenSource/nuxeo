<?xml version="1.0"?>
<component name="org.nuxeo.ecm.platform.wi.directories">

    <require>org.nuxeo.ecm.directories</require>

    <extension target="org.nuxeo.ecm.directory.sql.SQLDirectoryFactory" point="directories">

        <directory name="digest_auth">
            <schema>digest_auth</schema>
            <dataSource>java:/nxsqldirectory</dataSource>
            <table>digest_auth</table>
            <idField>usr</idField>
            <passwordField>ha1</passwordField>
            <autoincrementIdField>false</autoincrementIdField>
            <createTablePolicy>on_missing_columns</createTablePolicy>
            <querySizeLimit>15</querySizeLimit>
        </directory>

    </extension>


</component>
