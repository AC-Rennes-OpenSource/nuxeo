<?xml version="1.0"?>
<component name="org.nuxeo.ecm.platform.wi.UserManagerImpl">
    <require>org.nuxeo.ecm.platform.usermanager.UserManagerImpl</require>

    <extension target="org.nuxeo.ecm.platform.usermanager.UserService"
               point="userManager">

        <userManager
                class="org.nuxeo.ecm.platform.computedgroups.UserManagerWithComputedGroups">
            <users>
                <listingMode>search_only</listingMode>
            </users>

            <!-- If digestAuthDirectory or digestAuthRealm not specified, then there will be no synchronization
            between the main user repository password and digest_auth HA1-->
            <digestAuthDirectory>digest_auth</digestAuthDirectory>
            <digestAuthRealm>NUXEO</digestAuthRealm>
        </userManager>

    </extension>

</component>