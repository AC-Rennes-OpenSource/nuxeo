<?xml version="1.0"?>
<component name="org.nuxeo.ecm.core.storage.sql.test.repo.repository">
  <extension target="org.nuxeo.ecm.core.api.repository.RepositoryManager"
    point="repositories">
    <repository name="test" />
  </extension>
  <extension target="org.nuxeo.ecm.core.repository.RepositoryService"
    point="repository">
    <repository name="test"
      factory="org.nuxeo.ecm.core.storage.sql.coremodel.SQLRepositoryFactory">
      <repository>
        <indexing>
          <queryMaker class="org.nuxeo.ecm.core.storage.sql.NXQLQueryMaker" />
          <queryMaker class="org.nuxeo.ecm.core.storage.sql.CapturingQueryMaker" />
          <queryMaker class="org.nuxeo.ecm.core.chemistry.impl.CMISQLQueryMaker" />
          <fulltext analyzer="org.apache.lucene.analysis.fr.FrenchAnalyzer">
            <index> <!-- name="default" implied -->
              <!-- all props implied -->
            </index>
            <index name="title">
              <field>dc:title</field>
            </index>
          </fulltext>
        </indexing>
        <xa-datasource>org.h2.jdbcx.JdbcDataSource</xa-datasource>
        <!-- Property name mentioned in SQLBackendHelper -->
        <property name="URL">jdbc:h2:${nuxeo.test.h2.path};AUTO_SERVER=TRUE</property>
        <property name="User">sa</property>
        <property name="Password"></property>
      </repository>
    </repository>
  </extension>
</component>
