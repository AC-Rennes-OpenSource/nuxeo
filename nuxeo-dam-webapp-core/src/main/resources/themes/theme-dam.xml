<?xml version="1.0" encoding="UTF-8"?>
<theme name="dam" template-engines="jsf-facelets">
  <layout>
    <page name="default">
      <section>
        <cell>
          <!-- dam logo -->
          <fragment type="generic fragment"/>
        </cell>
        <cell>
          <!-- dam banner -->
          <fragment type="generic fragment"/>
          <!-- Include -->
          <fragment type="generic fragment"/>
        </cell>
      </section>
      <section>
        <cell>
          <!-- dam search filters -->
          <fragment type="generic fragment"/>
        </cell>
        <cell>
          <!-- dam filtered search results -->
          <fragment type="generic fragment"/>
        </cell>
        <cell>
          <!-- main area -->
          <fragment type="generic fragment"/>
        </cell>
      </section>
      <section>
        <cell>
          <fragment type="generic fragment"/>
          <!-- dam language -->
          <fragment type="generic fragment"/>
        </cell>
      </section>
    </page>
  </layout>
  <formats>
    <!-- LAYOUT -->
    <layout element="page[1]">
      <margin>0</margin>
      <padding>0</padding>
    </layout>
    <layout element="page[1]/section[1]">
      <width>100%</width>
    </layout>
    <layout element="page[1]/section[1]/cell[1]">
      <width>18%</width>
      <text-align>center</text-align>
    </layout>
    <layout element="page[1]/section[1]/cell[2]">
      <width>82%</width>
    </layout>
    <layout element="page[1]/section[2]">
      <height>100%</height>
      <width>100%</width>
    </layout>
    <layout element="page[1]/section[2]/cell[1]">
      <width>18%</width>
    </layout>
    <layout element="page[1]/section[2]/cell[2]">
      <width>42%</width>
    </layout>
    <layout element="page[1]/section[2]/cell[3]">
      <width>40%</width>
    </layout>
    <layout element="page[1]/section[3]">
      <width>100%</width>
      <text-align>right</text-align>
    </layout>
    <layout element="page[1]/section[3]/cell[1]">
      <width>100%</width>
    </layout>
    <widget element="">
      <view>theme view</view>
      <icon>/nuxeo/icons/favicon.png</icon>
      <charset>utf-8</charset>
    </widget>
    <!-- WIDGET AFFECTATON -->
    <widget element="page[1]">
      <view>page frame</view>
    </widget>
    <widget element="page[1]/section[1]|page[1]/section[2]">
      <view>section frame</view>
    </widget>
    <widget element="page[1]/section[1]/cell[1]|page[1]/section[1]/cell[2]|page[1]/section[2]/cell[1]|page[1]/section[2]/cell[2]|page[1]/section[2]/cell[3]">
      <view>cell frame</view>
    </widget>
    <widget element="page[1]/section[1]/cell[1]/fragment[1]">
      <view>dam logo</view>
    </widget>
    <widget element="page[1]/section[1]/cell[2]/fragment[1]">
      <view>dam banner</view>
    </widget>
    <widget element="page[1]/section[3]/cell[1]/fragment[2]">
      <view>dam language</view>
    </widget>
    <widget element="page[1]/section[1]/cell[2]/fragment[2]">
      <view>dam includes</view>
    </widget>
    <widget element="page[1]/section[2]/cell[1]/fragment[1]">
      <view>dam search filters</view>
    </widget>
    <widget element="page[1]/section[2]/cell[2]/fragment[1]">
      <view>dam filtered search results</view>
    </widget>
    <widget element="page[1]/section[2]/cell[3]/fragment[1]">
      <view>dam selection view</view>
    </widget>
    <widget element="page[1]/section[3]">
      <view>section frame</view>
    </widget>
    <widget element="page[1]/section[3]/cell[1]">
      <view>cell frame</view>
    </widget>
    <widget element="page[1]/section[3]/cell[1]/fragment[1]">
      <view>dam footer</view>
    </widget>
    <!-- buttons -->
    <style name="default buttons">
      <selector path=".button">
        <font preset="default (DAM fonts)"/>
        <color>#333333</color>
        <border preset="buttons (DAM borders)"/>
        <background preset="buttons (DAM backgrounds)"/>
        <margin>5px 10px 10px 0px</margin>
        <padding>2px 5px 2px 5px</padding>
        <cursor>pointer</cursor>
      </selector>
      <selector path=".button:hover">
        <color>#000000</color>
        <border-color>#92999e</border-color>
      </selector>
      <selector path=".button[disabled=disabled], .button[disabled=disabled]:hover">
        <color>#ccc</color>
      </selector>
      <selector path=".togglePanelTitleBox .button">
        <font preset="small (DAM fonts)"/>
        <margin>1px 5px 1px 0px</margin>
        <padding>1px 5px</padding>
      </selector>
    </style>
    <style name="common style" inherit="default buttons">
      <selector path="h1, h2, h3, h4, h5, h6, div, form, p, span">
        <margin>0</margin>
        <padding>0</padding>
      </selector>
      <selector path="body, div">
        <font preset="default (DAM fonts)"/>
        <color preset="black (DAM colors)"/>
        <line-height>1.25em</line-height>
      </selector>
      <selector path="img">
        <border>none</border>
        <margin>0</margin>
      </selector>
      <selector path="a">
        <color>#666666</color>
        <text-decoration>none</text-decoration>
      </selector>
      <selector path="a:visited, a:active">
        <color>#666666</color>
      </selector>
      <selector path="a:hover">
        <color>#666666</color>
        <text-decoration>underline</text-decoration>
      </selector>
      <selector path="input, table">
        <margin>0</margin>
      </selector>
      <selector path="table, .dataInput, .dataOutput, .dataList">
        <border-collapse>collapse</border-collapse>
        <font preset="default (DAM fonts)"/>
        <width>100%</width>
      </selector>
      <selector path=".dataList td">
        <padding>5px 3px</padding>
      </selector>
      <selector path=".dataOutput th">
        <border-bottom preset="graymedium (DAM borders)"/>
        <color>#000</color>
        <background preset="tableheader (DAM backgrounds)"/>
        <text-align>left</text-align>
        <height>18px</height>
      </selector>
      <selector path=".dataOutput td">
        <padding>5px 3px</padding>
      </selector>
      <selector path=".labelColumn">
        <width>120px</width>
        <vertical-align>top</vertical-align>
        <color preset="gray.medium (DAM colors)"/>
      </selector>
      <selector path=".fieldColumn">
        <padding-left>5px</padding-left>
        <color preset="black (DAM colors)"/>
      </selector>
      <selector path=".iconColumn">
        <width>20px</width>
        <text-align>center</text-align>
      </selector>
      <selector path=".searchInput">
        <background preset="searchInput (DAM backgrounds)"/>
        <border>1px solid #CCCCCC</border>
        <margin>0</margin>
        <padding>3px 3px 3px 20px</padding>
        <width>100%</width>
      </selector>
      <selector path=".action_bar">
        <margin>10px 10px 10px 0</margin>
        <line-height>normal</line-height>
      </selector>
      <selector path=".tabsBar">
        <border-bottom preset="tabsbar (DAM borders)"/>
        <width>100%</width>
        <line-height>normal</line-height>
        <border-bottom preset="grayneutral (DAM borders)"/>
      </selector>
      <selector path=".tabsBar ul">
        <margin>0</margin>
        <padding>0px 10px 0 0</padding>
        <list-style>none</list-style>
      </selector>
      <selector path=".tabsBar li">
        <margin>0</margin>
        <padding>0</padding>
        <float>left</float>
      </selector>
      <selector path=".tabsBar a, .tabsBar a:hover, .tabsBar a:visited">
        <color preset="blue.gray (DAM colors)"/>
        <border-right preset="grayneutral (DAM borders)"/>
        <background preset="tabs (DAM backgrounds)"/>
        <text-decoration>none</text-decoration>
        <font-weight>normal</font-weight>
        <display>block</display>
        <padding>3px 7px</padding>
        <float>left</float>
      </selector>
      <selector path=".tabsBar a.selected, .tabsBar a.selected:hover, .tabsBar a.selected:visited">
        <color>#000</color>
        <border-right preset="grayneutral (DAM borders)"/>
        <background preset="white (DAM backgrounds)"/>
      </selector>
      <selector path=".tabsBar li a:hover">
        <color preset="blue.gray (DAM colors)"/>
        <background preset="white (DAM backgrounds)"/>
      </selector>
      <selector path="#selectionView iframe">
        <width>100%</width>
      </selector>
      <selector path=".tabsContent">
        <margin>0px</margin>
        <padding>5px 10px 10px 10px</padding>
      </selector>
      <selector path=".togglePanelTitleBox"/>
      <selector path=".togglePanel">
        <margin>0</margin>
        <background>transparent url(/nuxeo/img/data_title_bg.png) repeat-x top left</background>
      </selector>
      <selector path=".togglePanel h3">
        <padding>4px 0</padding>
        <font-size>11px</font-size>
        <float>left</float>
      </selector>
      <selector path=".togglePanel h3 .folded">
        <padding>0 0 0 18px</padding>
        <background>transparent url(/nuxeo/icons/arrow_folded.gif) top left no-repeat</background>
      </selector>
      <selector path=".togglePanel h3 .unfolded">
        <padding>0 0 0 18px</padding>
        <background>transparent url(/nuxeo/icons/arrow_unfolded.gif) top left no-repeat</background>
      </selector>
      <selector path=".togglePanel h3 a,.togglePanel h3 a:link, .togglePanel h3 a:visited, .togglePanel h3 a:hover, .togglePanel h3 a:visited:hover">
        <color>#4B4D68</color>
      </selector>
      <selector path=".dataBlockActions">
        <float>right</float>
        <padding>3px 0px</padding>
      </selector>
      <selector path=".togglePanel .togglePanelBody">
        <background>#ffffff</background>
        <padding>8px 10px</padding>
      </selector>
      <selector path=".dataRowEven">
        <background preset="white (DAM backgrounds)"/>
      </selector>
      <selector path=".dataRowOdd">
        <background preset="blue.light (DAM backgrounds)"/>
      </selector>
      <selector path=".logopic">
        <padding>0px 5px</padding>
      </selector>
      <selector path=".searchFilter"/>
      <selector path=".filterContent">
        <padding>0px</padding>
      </selector>
      <selector path=".banner_actions ul">
        <padding>0</padding>
        <margin>0</margin>
        <height>30px</height>
        <float>right</float>
        <list-style>none</list-style>
      </selector>
      <selector path=".banner_actions ul li">
        <float>left</float>
      </selector>
      <selector path=".banner_actions ul li a">
        <display>block</display>
        <padding>9px 10px 8px</padding>
        <background>transparent url(/nuxeo/img/headerLink_bg.png) repeat-x top left</background>
      </selector>
      <selector path=".banner_actions ul li a:hover">
        <background>transparent url(/nuxeo/img/headerLink_bg_hover.png) repeat-x top left</background>
        <text-decoration>none</text-decoration>
      </selector>
      <selector path=".importButton">
        <padding>6px 0px 0px 20px</padding>
        <background>transparent url(/nuxeo/img/import_button.png) no-repeat top left</background>
      </selector>
      <selector path=".settingsButton">
        <padding>6px 0px 0px 20px</padding>
        <background>transparent url(/nuxeo/img/settings_button.png) no-repeat top left</background>
      </selector>
      <selector path=".configButton">
        <padding>6px 0px 0px 20px</padding>
        <background>transparent url(/nuxeo/img/config_button.png) no-repeat top left</background>
      </selector>
      <selector path=".separator">
        <padding>9px 0px 8px</padding>
        <display>block</display>
        <height>30px</height>
      </selector>
      <selector path=".logOutButton">
        <color>#afafaf</color>
      </selector>
      <selector path="a:hover .logOutButton">
        <color>#ffffff</color>
      </selector>
      <selector path=".pageNavigationControls">
        <padding>2px 5px</padding>
        <background preset="navigationbar (DAM backgrounds)"/>
        <text-align>center</text-align>
      </selector>
      <selector path=".previousBlock">
        <float>left</float>
        <width>15%</width>
        <text-align>left</text-align>
      </selector>
      <selector path=".statusBlock">
        <float>left</float>
        <width>70%</width>
        <padding-top>1px</padding-top>
      </selector>
      <selector path=".nextBlock">
        <float>left</float>
        <width>15%</width>
        <text-align>right</text-align>
      </selector>
      <selector path=".documentPreviewTitle">
        <padding>4px 5px</padding>
        <font-size>12px</font-size>
        <background preset="actionbar (DAM backgrounds)"/>
        <text-align>center</text-align>
        <border-bottom preset="grayneutral (DAM borders)"/>
      </selector>
      <selector path=".infoTabContent">
        <text-align>center</text-align>
        <background-color>#6F6F6F</background-color>
      </selector>
      <selector path=".actionPanelViews">
        <background-color>#D0D1D8</background-color>
        <padding>2px 5px</padding>
        <height>18px</height>
      </selector>
      <selector path=".ListViewIcon, .ThumbViewIcon">
        <margin>0 5px 0 0</margin>
      </selector>
      <selector path=".thumbViewElement">
        <background-color>#ebefff</background-color>
        <padding>8px</padding>
        <width>130px</width>
        <height>155px</height>
      </selector>
      <selector path=".thumbViewElement table">
        <font-size>10px</font-size>
      </selector>
      <selector path=".thumbViewPictureLink">
        <display>table-cell</display>
        <text-align>center</text-align>
        <vertical-align>middle</vertical-align>
        <padding-bottom>7px</padding-bottom>
        <width>125px</width>
        <height>80px</height>
      </selector>
      <selector path=".thumbViewTitle">
        <font-size>11px</font-size>
      </selector>
      <selector path=".thumbViewlabel">
        <color>#4d4d4d</color>
      </selector>
      <selector path=".selected">
        <background-color>#c7d3e0</background-color>
      </selector>
      <selector path=".deliveryBlock .dataInput">
        <margin-top>20px</margin-top>
      </selector>
      <selector path=".deliveryBlock .dataInput .button">
        <width>auto</width>
      </selector>
      <selector path=".waiterBlock #importsetCreationWaiter">
        <background-color>white</background-color>
        <border>1px solid #9f9f9f</border>
      </selector>
    </style>
    <style element="page[1]/section[1]" inherit="common style">
      <selector path="" view="section frame">
        <border-bottom preset="black (DAM borders)"/>
        <background preset="banner (DAM backgrounds)"/>
      </selector>
    </style>
    <style element="page[1]/section[1]/cell[2]" inherit="common style"/>
        <style element="page[1]/section[1]/cell[2]/fragment[1]" inherit="common style">
      <selector path=".banner_actions" view="dam banner">
        <margin>0</margin>
        <padding>0px 10px 0px 0px</padding>
        <text-align>right</text-align>
        <font preset="small (DAM fonts)"/>
        <color preset="gray.light (DAM colors)"/>
      </selector>
      <selector path=".banner_actions a, .banner_actions a:link, .banner_actions a:hover, .banner_actions a:active, .banner_actions a:visited," view="dam banner">
        <color preset="white (DAM colors)"/>
      </selector>
    </style>
        <style element="page[1]/section[2]/cell[1]" inherit="common style">
      <selector path="" view="cell frame">
        <background preset="leftcolumn (DAM backgrounds)"/>
        <border-right preset="graymedium (DAM borders)"/>
      </selector>
      <selector path="h3" view="cell frame">
        <padding>2px 10px</padding>
        <font preset="small (DAM fonts)"/>
        <background preset="filterstitle (DAM backgrounds)"/>
      </selector>
    </style>
    <style element="page[1]/section[2]/cell[2]" inherit="common style">
      <selector path="" view="cell frame">
        <border-right preset="graymedium (DAM borders)"/>
      </selector>
    </style>
    <style element="page[1]/section[2]/cell[3]" inherit="common style">
       <selector path="td.labelColumn" view="cell frame">
        <text-align>right</text-align>
        <vertical-align>top</vertical-align>
        <padding>2px 5px 1px 10px</padding>
      </selector>
      <selector path="td.fieldColumn" view="cell frame">
        <vertical-align>top</vertical-align>
        <padding>2px 5px 1px 10px</padding>
      </selector>
    </style>
    <style element="page[1]/section[3]" inherit="common style">
      <selector path="" view="section frame">
        <padding>10px</padding>
        <background preset="footer (DAM backgrounds)"/>
        <border-top preset="black (DAM borders)"/>
      </selector>
      <selector path="div" view="section frame">
        <font preset="small (DAM fonts)"/>
        <color>#AFAFAF</color>
      </selector>
    </style>
    <style element="page[1]/section[3]/cell[1]" inherit="common style"/>
    <style element="page[1]/section[3]/cell[1]/fragment[1]" inherit="common style">
      <selector path="a, a:link, a:active, a:visited" view="dam footer">
        <color preset="white (DAM colors)"/>
        <text-decoration>none</text-decoration>
      </selector>
      <selector path="a:hover">
        <color preset="white (DAM colors)" view="dam footer"/>
        <text-decoration>underline</text-decoration>
      </selector>
    </style>
    <style element="page[1]/section[3]/cell[1]/fragment[2]" inherit="common style">
      <selector path="#dam_language" view="dam language">
        <margin>8px 10px 0px 0px</margin>
      </selector>
    </style>
  </formats>
</theme>