<?xml version="1.0"?>
<component name="org.nuxeo.dam.platform.ui.web.rest.URLService.contrib">
  <documentation>
    Contributions for DAM basic rest navigation through the application.

    @version 1.0
    @author Benjamin JALON (bjalon@nuxeo.com)
  </documentation>

  <extension target="org.nuxeo.ecm.platform.ui.web.rest.URLService"
      point="urlpatterns">

    <documentation>
      Basic url pattern using the doc id codec: it places the application in the
      document context described by the url and sets a current tab.

      Additional url pattern using the doc path codec.
    </documentation>

    <urlPattern name="default" enabled="true">
      <defaultURLPolicy>true</defaultURLPolicy>
      <needBaseURL>true</needBaseURL>
      <needRedirectFilter>true</needRedirectFilter>
      <needFilterPreprocessing>true</needFilterPreprocessing>
      <codecName>docid</codecName>
      <actionBinding>#{urlPatternHelper.initContextFromRestRequest}</actionBinding>
      <documentViewBinding>#{urlPatternHelper.documentView}</documentViewBinding>
      <newDocumentViewBinding>#{urlPatternHelper.newDocumentView}</newDocumentViewBinding>
    </urlPattern>

    <urlPattern name="path" enabled="true">
      <defaultURLPolicy>false</defaultURLPolicy>
      <needBaseURL>true</needBaseURL>
      <needRedirectFilter>true</needRedirectFilter>
      <needFilterPreprocessing>true</needFilterPreprocessing>
      <codecName>docpath</codecName>
      <actionBinding>#{urlPatternHelper.initContextFromRestRequest}</actionBinding>
      <documentViewBinding>#{urlPatternHelper.documentView}</documentViewBinding>
      <newDocumentViewBinding>#{urlPatternHelper.newDocumentView}</newDocumentViewBinding>
    </urlPattern>

  </extension>

</component>
