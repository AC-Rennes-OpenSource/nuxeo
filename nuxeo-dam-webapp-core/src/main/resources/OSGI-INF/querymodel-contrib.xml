<?xml version="1.0"?>

<component name="org.nuxeo.dam.webapp.querymodel.DefaultQueryModels">

  <extension
    target="org.nuxeo.ecm.core.search.api.client.querymodel.QueryModelService"
    point="model">

    <queryModel name="FILTERED_DOCUMENTS" docType="FilterQuery">
      <max>10</max>

      <whereClause>

        <predicate parameter="ecm:primaryType" operator="=">
          <field schema="filter_query" name="ecm_primaryType" />
        </predicate>

        <fixedPart>
        ecm:mixinType != 'HiddenInNavigation' AND ecm:primaryType IN ('Picture', 'File') 
        </fixedPart>

      </whereClause>

      <sortColumn>
        <field schema="filter_query" name="sortColumn" />
      </sortColumn>

      <sortAscending>
        <field schema="filter_query" name="sortAscending" />
      </sortAscending>
    </queryModel>

  </extension>

</component>
