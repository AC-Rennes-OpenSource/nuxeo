<?xml version="1.0"?>
<component name="org.nuxeo.apidoc.listener.contrib">

  <extension target="org.nuxeo.ecm.core.event.EventServiceComponent"
    point="listener">
    <listener name="latestDistributionsListener" async="false" postCommit="false"
      class="org.nuxeo.apidoc.listener.LatestDistributionsListener">
      <event>aboutToCreate</event>
      <event>beforeDocumentModification</event>
    </listener>

    <listener name="attributesExtractorFlagListener" async="false" postCommit="false"
      class="org.nuxeo.apidoc.listener.AttributesExtractorFlagListener">
      <event>aboutToCreate</event>
      <event>beforeDocumentModification</event>
    </listener>

    <listener name="attributeExtractorWorkerListener" async="false" postCommit="false"
      class="org.nuxeo.apidoc.listener.AttributeExtractorWorkerListener" priority="20">
      <event>documentCreated</event>
      <event>documentModified</event>
    </listener>
  </extension>


</component>
