<?xml version="1.0"?>

<component name="org.nuxeo.ecm.platform.threed.service.ThreeDService.default">
    <documentation>
        Defines default contributions for 3D service
    </documentation>

    <extension target="org.nuxeo.ecm.platform.threed.service.ThreeDService" point="automaticLOD">

        <automaticLOD name="100" percentage="100" maxPoly="9999" enabled="true" rendition="true" renditionVisible="true"/>
        <automaticLOD name="33" percentage="33" maxPoly="9999" enabled="true" rendition="true" renditionVisible="true"/>
        <automaticLOD name="11" percentage="11" maxPoly="9999" enabled="true" rendition="true" renditionVisible="true"/>
        <automaticLOD name="03" percentage="3" maxPoly="9999" enabled="true" rendition="true" renditionVisible="true"/>

    </extension>

    <extension target="org.nuxeo.ecm.platform.threed.service.ThreeDService" point="renderViews">

        <renderView name="isometric" azimuth="225" zenith="45" width="800" height="600"
                    enabled="true" rendition="true" renditionVisible="true"/>
        <renderView name="top" azimuth="270" zenith="0" width="800" height="600"
                    enabled="true" rendition="true" renditionVisible="true"/>
        <renderView name="left" azimuth="0" zenith="90" width="800" height="600"
                    enabled="true" rendition="true" renditionVisible="true"/>
        <renderView name="right" azimuth="180" zenith="90" width="800" height="600"
                    enabled="true" rendition="true" renditionVisible="true"/>
        <renderView name="front" azimuth="270" zenith="90" width="800" height="600"
                    enabled="true" rendition="true" renditionVisible="true"/>
        <renderView name="behind" azimuth="90" zenith="90" width="800" height="600"
                    enabled="true" rendition="true" renditionVisible="true"/>
        <renderView name="bottom" azimuth="270" zenith="180" width="800" height="600"
                    enabled="true" rendition="true" renditionVisible="true"/>

    </extension>

    <extension target="org.nuxeo.ecm.platform.threed.service.ThreeDService" point="automaticRenderViews">

        <automaticRenderView name="isometric" enable="true"/>
        <automaticRenderView name="top" enable="true"/>
        <automaticRenderView name="front" enable="true"/>
        <automaticRenderView name="left" enable="true"/>

    </extension>

</component>
