<?xml version="1.0"?>

<component name="org.nuxeo.ecm.platform.forms.layoutDemo.multipleUsersSuggestion.contrib">

  <require>org.nuxeo.ecm.platform.forms.layoutDemo.contrib</require>

  <extension target="org.nuxeo.ecm.platform.forms.layout.WebLayoutManager"
    point="layouts">

    <layout name="multipleUsersSuggestionLayout">
      <templates>
        <template mode="any">/layouts/layout_default_template.xhtml
        </template>
      </templates>
      <rows>
        <row>
          <widget>user</widget>
        </row>
      </rows>

      <widget name="user" type="multipleUsersSuggestion">
        <labels>
          <label mode="any">User or Group</label>
        </labels>
        <fields>
          <field>lds:stringList</field>
        </fields>
        <properties mode="any">
          <property name="minChars">3</property>
          <property name="hideInstructionLabel">true</property>
          <property name="placeholder">Choose one or more user/group</property>
        </properties>
      </widget>
    </layout>

  </extension>

</component>
