<?xml version="1.0"?>
<component name="org.nuxeo.dam.platform.schemas.contribution">

  <require>org.nuxeo.ecm.core.schema.TypeService</require>
  <require>org.nuxeo.ecm.core.CoreExtensions</require>

  <extension target="org.nuxeo.ecm.core.schema.TypeService" point="schema">
    <schema name="dam_common" prefix="damc" src="schemas/dam_common.xsd" />
    <schema name="filter_query" src="schemas/filter_query.xsd"/>
  </extension>

  <extension target="org.nuxeo.ecm.core.schema.TypeService" point="doctype">

    <doctype name="ImportSetRoot" extends="Folder">
      <facet name="Folderish"/>
    </doctype>

    <doctype name="ImportSet" extends="Folder">
      <schema name="file"/>
      <schema name="dam_common"/>
      <facet name="Folderish"/>
      <facet name="SuperSpace"/>
    </doctype>

    <doctype name="File" extends="Document">
      <schema name="common" />
      <schema name="dam_common"/>
      <schema name="file" />
      <schema name="dublincore"/>
      <schema name="uid" />
      <facet name="Downloadable" />
      <facet name="Versionable" />
    </doctype>

    <doctype name="Picture" extends="Document">
      <schema name="picture"/>
      <schema name="dam_common"/>
      <schema name="common"/>
      <schema name="uid"/>
      <schema name="dublincore"/>
      <facet name="MultiviewPicture"/>
      <facet name="Versionable"/>
      <facet name="Publishable"/>
      <facet name="Commentable"/>
    </doctype>

    <doctype name="Video" extends="Document">
      <schema name="video"/>
      <schema name="dam_common"/>
      <schema name="common"/>
      <schema name="uid"/>
      <schema name="dublincore"/>
      <facet name="Versionable"/>
      <facet name="Publishable"/>
      <facet name="Commentable"/>
    </doctype>

    <doctype name="Audio" extends="Document">
      <schema name="audio"/>
      <schema name="dam_common"/>
      <schema name="common"/>
      <schema name="uid"/>
      <schema name="dublincore"/>
      <facet name="Versionable"/>
      <facet name="Publishable"/>
      <facet name="Commentable"/>
    </doctype>


    <doctype name="FilterQuery" extends="Document">
      <schema name="filter_query"/>
    </doctype>

  </extension>

</component>
