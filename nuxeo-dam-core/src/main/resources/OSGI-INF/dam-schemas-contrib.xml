<?xml version="1.0"?>
<component name="org.nuxeo.dam.platform.schemas.contribution">

  <require>org.nuxeo.ecm.core.schema.TypeService</require>
  <require>org.nuxeo.ecm.core.CoreExtensions</require>

  <extension target="org.nuxeo.ecm.core.schema.TypeService" point="schema">
    <schema name="dam_common" prefix="damc" src="schemas/dam_common.xsd" />
    <schema name="filter_query" src="schemas/filter_query.xsd"/>
  </extension>

  <extension target="org.nuxeo.ecm.core.schema.TypeService" point="doctype">

    <doctype name="ImportSetRoot" extends="Folder">
      <facet name="Folderish"/>
    </doctype>

    <doctype name="ImportSet" extends="Folder">
      <schema name="file"/>
      <schema name="dam_common"/>
      <facet name="Folderish"/>
    </doctype>

    <doctype name="FilterQuery" extends="Document">
      <schema name="filter_query"/>
    </doctype>

  </extension>

</component>
