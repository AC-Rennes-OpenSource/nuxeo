<?xml version="1.0" encoding="UTF-8"?>
<component name="org.nuxeo.platform.dam.commandline.executor.contrib">

  <require>org.nuxeo.ecm.platform.picture.commandline.imagemagick</require>
  
  <extension target="org.nuxeo.ecm.platform.commandline.executor.service.CommandLineExecutorComponent"
    point="command">
    
  <command name="watermark" enabled="true">
      <commandLine>convert</commandLine>
      <parameterString>#{watermarkFilePath} -resize #{watermarkWidth} - | composite -dissolve 150 -gravity center - #{inputFilePath} #{outputFilePath}</parameterString>
      <installationDirective>You need to install ImageMagic.</installationDirective>
  </command>
   
  </extension>

</component>