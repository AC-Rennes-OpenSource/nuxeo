<?xml version="1.0"?>

<fragment>

  <extension target="application#MODULE">
    <module>
      <java>${bundle.fileName}</java>
    </module>
  </extension>

  <install>
    <!--  unzip the war template -->
    <unzip from="${bundle.fileName}" to="/">
      <include>nuxeo.war/**</include>
    </unzip>

    <!--  create a temp dir -->
    <!--  be sure no directory with that name exists -->
    <delete path="dam-webapp-contrib.tmp"/>
    <mkdir path="dam-webapp-contrib.tmp"/>

    <unzip from="${bundle.fileName}" to="dam-webapp-contrib.tmp">
      <include>OSGI-INF/l10n/**</include>
    </unzip>

    <append from="dam-webapp-contrib.tmp/OSGI-INF/l10n/messages.properties"
        to="nuxeo.war/WEB-INF/classes/messages.properties"
        addNewLine="true"/>
    <append
        from="dam-webapp-contrib.tmp/OSGI-INF/l10n/messages_en.properties"
        to="nuxeo.war/WEB-INF/classes/messages_en.properties"
        addNewLine="true"/>
    <append
        from="dam-webapp-contrib.tmp/OSGI-INF/l10n/messages_fr.properties"
        to="nuxeo.war/WEB-INF/classes/messages_fr.properties"
        addNewLine="true"/>

    <delete path="dam-webapp-contrib.tmp"/>
  </install>

</fragment>
