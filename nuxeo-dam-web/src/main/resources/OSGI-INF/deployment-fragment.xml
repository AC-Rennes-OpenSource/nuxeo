<?xml version="1.0"?>
<fragment version="1">

  <require>org.nuxeo.ecm.platform.ui</require>
  <require>org.nuxeo.ecm.webapp.base</require>

  <install>
    <!--  unzip the war template -->
    <unzip from="${bundle.fileName}" to="/" prefix="web">
      <include>web/nuxeo.war/**</include>
    </unzip>
  </install>

  <extension target="web#CONTEXT-PARAM-RICHFACES" mode="replace">
    <context-param>
     <param-name>org.richfaces.SKIN</param-name>
     <param-value>blueGrayDam</param-value>
    </context-param>
  </extension>

  <extension target="web#STD-AUTH-FILTER">
    <filter-mapping>
      <filter-name>NuxeoAuthenticationFilter</filter-name>
      <url-pattern>/nxdam/*</url-pattern>
      <dispatcher>REQUEST</dispatcher>
      <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
  </extension>

  <extension target="faces-config#NAVIGATION">
    <navigation-case>
      <from-outcome>assets</from-outcome>
      <to-view-id>/dam/assets.xhtml</to-view-id>
      <redirect />
    </navigation-case>
    <navigation-case>
      <from-outcome>annotations_popup</from-outcome>
      <to-view-id>/dam/annotations_popup.xhtml</to-view-id>
    </navigation-case>
  </extension>

</fragment>

