<?xml version="1.0"?>
<component name="org.nuxeo.ecm.platform.routing.premission.contrib">

  <require>org.nuxeo.ecm.core.security.defaultPermissions</require>
  <require>org.nuxeo.ecm.platform.routing.CoreExtensions</require>

  <extension point="permissions" target="org.nuxeo.ecm.core.security.SecurityService">
    <permission name="ValidateRoute" />
  </extension>

  <extension target="org.nuxeo.ecm.core.security.SecurityService" 
    point="permissionsVisibility">
    <visibility type="DocumentRoute">
      <item show="true" order="200">ValidateRoute</item>
    </visibility>
  </extension>

</component>
