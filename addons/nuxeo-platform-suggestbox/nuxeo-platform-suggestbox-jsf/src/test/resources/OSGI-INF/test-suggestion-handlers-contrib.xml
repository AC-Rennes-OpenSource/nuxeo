<?xml version="1.0"?>
<component
  name="org.nuxeo.ecm.platform.suggestbox.jsf.testSuggestionHandlers">

  <require>org.nuxeo.ecm.platform.suggestbox.core.defaultSuggestionHandlers
  </require>

  <extension
    target="org.nuxeo.ecm.platform.suggestbox.service.SuggestionService"
    point="suggestionHandlers">

    <suggestionHandler name="jsfSearchDocuments"
      operation="Custom.Suggestion.JSF.NavigateToFacetedSearch" />

    <suggestionHandler name="jsfNavigateToDocument"
      type="searchDocuments" suggesterGroup="searchbox"
      operation="Suggestion.JSF.NavigateToDocument" />

    <suggestionHandler name="newHandler" />

  </extension>

</component>
