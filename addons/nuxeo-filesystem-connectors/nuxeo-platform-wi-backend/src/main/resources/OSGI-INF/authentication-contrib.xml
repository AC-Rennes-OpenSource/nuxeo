<?xml version="1.0"?>
<component name="org.nuxeo.ecm.platform.wi.auth.config">

  <require>org.nuxeo.ecm.platform.login.digest</require>
  <require>org.nuxeo.ecm.webdav.auth.config</require>
  <extension target="org.nuxeo.ecm.platform.ui.web.auth.service.PluggableAuthenticationService" point="specificChains">

    <specificAuthenticationChain name="WSS">
      <urlPatterns>
        <url>(.*)/_vti_.*</url>
      </urlPatterns>
      <headers>
        <header name="User-Agent">MSFrontPage.*</header>
      </headers>

      <allowedPlugins>
        <plugin>DIGEST_AUTH</plugin>
        <plugin>BASIC_AUTH</plugin>
      </allowedPlugins>
    </specificAuthenticationChain>
  </extension>

  <extension target="org.nuxeo.ecm.platform.ui.web.auth.service.PluggableAuthenticationService" point="specificChains">

    <specificAuthenticationChain name="WebDAV">
      <headers>
        <header name="User-Agent">(Microsoft-WebDAV-MiniRedir|DavClnt|litmus|gvfs|davfs|WebDAV|cadaver).*</header>
      </headers>

      <allowedPlugins>
        <plugin>DIGEST_AUTH</plugin>
        <plugin>BASIC_AUTH</plugin>
      </allowedPlugins>
    </specificAuthenticationChain>
  </extension>

</component>
