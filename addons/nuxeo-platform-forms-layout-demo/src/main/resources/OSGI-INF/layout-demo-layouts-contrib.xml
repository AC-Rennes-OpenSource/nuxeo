<?xml version="1.0"?>
<component name="org.nuxeo.ecm.platform.forms.layoutDemo.layout.contrib">

  <extension target="org.nuxeo.ecm.platform.forms.layout.WebLayoutManager"
    point="layouts">

    <layout name="layout_demo_widget_common_settings">
      <templates>
        <template mode="any">/layouts/layout_default_template.xhtml</template>
      </templates>
      <rows>
        <row>
          <widget>label</widget>
        </row>
        <row>
          <widget>helpLabel</widget>
        </row>
        <row>
          <widget>translated</widget>
        </row>
      </rows>
      <widget name="label" type="text">
        <labels>
          <label mode="any">Label</label>
        </labels>
        <fields>
          <field>label</field>
        </fields>
      </widget>
      <widget name="helpLabel" type="text">
        <labels>
          <label mode="any">Help label</label>
        </labels>
        <fields>
          <field>helpLabel</field>
        </fields>
      </widget>
      <widget name="translated" type="checkbox">
        <labels>
          <label mode="any">Translated</label>
        </labels>
        <helpLabels>
          <label mode="any">
            If set to true, the label and help label will be considered as
            message keys and will be translated
          </label>
        </helpLabels>
        <fields>
          <field>translated</field>
        </fields>
      </widget>
    </layout>

  </extension>

</component>