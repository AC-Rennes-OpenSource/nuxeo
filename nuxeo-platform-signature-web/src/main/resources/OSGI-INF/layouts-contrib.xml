<?xml version="1.0"?>
<component name="nuxeo.platform.signature.web.layouts">

  <extension target="org.nuxeo.ecm.platform.forms.layout.WebLayoutManager" point="layouts">
    <layout name="cert">
      <templates>
        <template mode="any">/layouts/layout_default_template.xhtml</template>
      </templates>
      <rows>
        <row>
          <widget>usernameWidget</widget>
        </row>
        <row>
          <widget>certWidget</widget>
        </row>
      </rows>
      <widget name="usernameWidget" type="text">
        <labels>
          <label mode="any">username</label>
        </labels>
        <translated>true</translated>
        <fields>
          <field schema="certdir">userid</field>
        </fields>
        <widgetModes>
          <mode value="any">view</mode>
        </widgetModes>
        <properties widgetMode="edit">
          <property name="required">true</property>
        </properties>
      </widget>
      <widget name="certWidget" type="text">
        <labels>
          <label mode="any">Certificate</label>
        </labels>
        <translated>true</translated>
        <fields>
          <field schema="certdir">certificate</field>
        </fields>
        <widgetModes>
          <mode value="any">view</mode>
        </widgetModes>
        <properties widgetMode="edit">
          <property name="required">true</property>
        </properties>
      </widget>
      </layout>
  </extension>
</component>