  <require>org.nuxeo.ecm.core.CoreExtensions</require>

  <extension target="org.nuxeo.ecm.core.schema.TypeService" point="schema">
    <schema name="streamable_media" src="schemas/streamable_media.xsd" prefix="strm" />
  </extension>

  <extension target="org.nuxeo.ecm.core.schema.TypeService" point="doctype">
    <facet name="StreamableMedia">
      <schema name="streamable_media" />
    </facet>

    <doctype name="Video" extends="Document">
      <schema name="common" />
      <schema name="dublincore" />
      <schema name="file" />
      <schema name="uid" />
      <facet name="Commentable" />
      <facet name="Versionable" />
      <facet name="Publishable" />
      <facet name="Video" />
      <facet name="HasStoryboard" />
      <facet name="HasVideoPreview" />
      <facet name="StreamableMedia" />
    </doctype>
  </extension>
</component>
