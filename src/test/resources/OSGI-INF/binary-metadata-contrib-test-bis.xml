<component name="org.nuxeo.binary.metadata.contrib.test.bis">

  <require>org.nuxeo.binary.metadata.contrib.pdf.test</require>

  <extension target="org.nuxeo.binary.metadata.api.service"
             point="metadataRules">
    <rule id="default" order="0" enabled="true" async="false">
      <metadataMappings>
        <metadataMapping-id>PDF</metadataMapping-id>
      </metadataMappings>
      <filters>
        <filter-id>hasFileType</filter-id>
      </filters>
    </rule>
    <rule id="other" order="0" enabled="true" async="true">
      <metadataMappings>
        <metadataMapping-id>PDFBIS</metadataMapping-id>
        <metadataMapping-id>PDFTRIS</metadataMapping-id>
      </metadataMappings>
      <filters>
        <filter-id>hasFileType</filter-id>
      </filters>
    </rule>
  </extension>

  <extension target="org.nuxeo.ecm.platform.actions.ActionService"
             point="filters">
    <filter id="hasFileType">
      <rule grant="true">
        <type>File</type>
      </rule>
    </filter>
  </extension>

</component>