<?xml version="1.0"?>

<component
  name="org.nuxeo.ecm.platform.forms.layoutDemo.complexWidget.contrib">

  <extension target="org.nuxeo.ecm.platform.forms.layout.WebLayoutManager"
    point="layouts">

    <layout name="complexWidgetLayout">
      <templates>
        <template mode="any">/layouts/layout_default_template.xhtml</template>
      </templates>
      <rows>
        <row>
          <widget>complexWidget</widget>
        </row>
      </rows>
      <widget name="complexWidget" type="template">
        <labels>
          <label mode="any">Complex widget</label>
        </labels>
        <translated>false</translated>
        <fields>
          <field>lds:complexField</field>
        </fields>
        <properties mode="any">
          <property name="template">
            /widgets/complex_widget_template.xhtml
          </property>
        </properties>
        <subWidgets>
          <widget name="stringComplexItem" type="text">
            <fields>
              <field>stringComplexItem</field>
            </fields>
            <properties widgetMode="edit">
              <property name="required">true</property>
            </properties>
          </widget>
          <widget name="dateComplexItem" type="datetime">
            <fields>
              <field>dateComplexItem</field>
            </fields>
            <properties widgetMode="view">
              <property name="pattern">#{nxu:basicDateFormater()}</property>
            </properties>
            <properties widgetMode="edit">
              <property name="format">
                #{nxu:basicDateAndTimeFormater()}
              </property>
            </properties>
          </widget>
          <widget name="intComplexItem" type="int">
            <fields>
              <field>intComplexItem</field>
            </fields>
          </widget>
          <widget name="booleanComplexItem" type="checkbox">
            <fields>
              <field>booleanComplexItem</field>
            </fields>
          </widget>
        </subWidgets>
      </widget>
    </layout>
  </extension>

</component>