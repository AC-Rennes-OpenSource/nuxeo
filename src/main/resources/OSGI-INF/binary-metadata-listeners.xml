<component name="org.nuxeo.binary.metadata.listener.BinaryMetadataListener">

  <extension target="org.nuxeo.ecm.core.event.EventServiceComponent"
             point="listener">
    <listener name="binaryMetadataSyncListener"
              class="org.nuxeo.binary.metadata.internals.listeners.BinaryMetadataSyncListener"
              order="100">
      <event>aboutToCreate</event>
      <event>beforeDocumentModification</event>
    </listener>
    <listener name="binaryMetadataAsyncListener" async="true"
              class="org.nuxeo.binary.metadata.internals.listeners.BinaryMetadataAsyncListener"
              order="100">
      <event>asyncBinaryMetadataEvent</event>
    </listener>
  </extension>

</component>
