<?xml version="1.0"?>
<component name="org.nuxeo.ecm.platform.forms.layoutDemo.core.contrib">
  <extension target="org.nuxeo.ecm.core.api.repository.RepositoryManager"
    point="repositories">
    <repository name="layoutDemo"
      label="Layout demo repository (with a memory backend)" />
  </extension>
  <extension target="org.nuxeo.ecm.core.repository.RepositoryService"
    point="repository">
    <repository name="layoutDemo"
      factory="org.nuxeo.ecm.core.storage.sql.coremodel.SQLRepositoryFactory">
      <repository sendInvalidationEvents="true">
        <schema>
          <field type="largetext">note</field>
          <field type="largetext">relatedtext</field>
        </schema>
        <indexing>
          <!-- no fulltext for memory databases -->
          <fulltext disabled="true" />
        </indexing>
        <xa-datasource>org.h2.jdbcx.JdbcDataSource</xa-datasource>
        <property name="URL">jdbc:h2:mem:test;DB_CLOSE_DELAY=-1</property>
        <!-- 
          <property name="User">sa</property>
          <property name="Password"></property>
        -->
      </repository>
    </repository>
  </extension>
</component>
