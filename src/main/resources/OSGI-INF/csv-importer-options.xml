<?xml version="1.0" encoding="UTF-8"?>
<component name="org.nuxeo.ecm.csv.CSVImporter">

  <implementation class="org.nuxeo.ecm.csv.CSVImporterImpl" />

  <service>
    <provide interface="org.nuxeo.ecm.csv.CSVImporter"/>
  </service>
  
   <extension target="org.nuxeo.runtime.ConfigurationService" point="configuration">
    <property name="nuxeo.csv.dateFormat">"MM/dd/yyyy"</property>
    <property name="nuxeo.csv.listSeparatorRegex">"\\|"</property>
    <property name="nuxeo.csv.escapeCharacter">'\\'</property>
    <property name="nuxeo.csv.updateExisting">true</property>
    <property name="nuxeo.csv.checkAllowedSubTypes">true</property>
    <property name="nuxeo.csv.sendEmail">false</property>
    <property name="nuxeo.csv.batchSize">50</property>
  </extension>
  

</component>
