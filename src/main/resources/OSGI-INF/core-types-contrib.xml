<?xml version="1.0"?>
<component name="org.nuxeo.platform.TemplateSources.doctypes">

  <require>org.nuxeo.ecm.core.CoreExtensions</require>

  <extension target="org.nuxeo.ecm.core.schema.TypeService" point="schema">
    <schema name="documenttemplate" src="schemas/documenttemplate.xsd" prefix="tmpl"/>
    <schema name="templatesupport" src="schemas/templatesupport.xsd" prefix="nxts"/>
  </extension>

  <extension target="org.nuxeo.ecm.core.schema.TypeService" point="doctype">

  <facet name="Template" />
  <facet name="TemplateBased" schema="templatesupport"/>

  <doctype name="TemplateSource" extends="File">
    <schema name="documenttemplate"/>
    <facet name="Template" />
  </doctype>

  <doctype name="TemplateBasedFile" extends="File">
    <schema name="templatesupport"/>
    <facet name="TemplateBased" />
  </doctype>

  <doctype name="TemplateBasedNote" extends="Note">
    <schema name="file"/>
    <schema name="templatesupport"/>
    <facet name="TemplateBased" />
  </doctype>

 </extension>

</component>
