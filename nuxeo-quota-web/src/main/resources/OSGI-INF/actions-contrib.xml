<?xml version="1.0" encoding="UTF-8"?>
<component name="org.nuxeo.ecm.quota.actions">

  <extension target="org.nuxeo.ecm.platform.actions.ActionService"
    point="actions">

    <action id="QuotaStatistics" link="/incl/quota/adminQuotaStats.xhtml"
      label="adm.quota.statistics" order="45">
      <category>NUXEO_ADMIN</category>
      <filter-id>only_for_manager</filter-id>
    </action>

    <action id="TAB_QUOTA" link="/incl/tabs/document_quota.xhtml"
      order="400" label="action.view.quota" icon="/icons/file.gif"
      accessKey="q">
      <category>VIEW_ACTION_LIST</category>
      <filter-id>QUOTA_MANAGABLE_DOCTYPES</filter-id>
    </action>

  </extension>

  <extension target="org.nuxeo.ecm.platform.actions.ActionService"
    point="filters">

    <filter id="QUOTA_MANAGABLE_DOCTYPES">
      <rule grant="true">
        <type>Domain</type>
        <type>Workspace</type>
      </rule>
    </filter>

    <filter id="editQuota">
      <rule grant="true">
        <permission>Write</permission>
      </rule>
    </filter>

  </extension>
</component>
