<?xml version="1.0" encoding="UTF-8"?>
<component name="org.nuxeo.drive.actions">

  <extension target="org.nuxeo.ecm.platform.actions.ActionService"
    point="actions">

    <action id="driveSynchronize" link="#{nuxeoDriveActions.synchronizeCurrentDocument}"
      order="50" label="command.driveSynchronizeFolder" type="link"
      icon="/icons/drive_unsynced.png">
      <category>DOCUMENT_UPPER_ACTION</category>
      <filter-id>can_sync</filter-id>
    </action>

    <action id="driveUnsynchronizeCurrentDocument" link="#{nuxeoDriveActions.unsynchronizeCurrentDocument}"
      order="50" label="command.driveUnsynchronizeFolder" type="link"
      icon="/icons/drive_synced.png">
      <category>DOCUMENT_UPPER_ACTION</category>
      <filter-id>can_unsync_current_doc</filter-id>
    </action>

    <action id="driveUnsynchronizeRoot"
      link="#{nuxeoDriveActions.navigateToCurrentSynchronizationRoot}" order="50"
      label="command.navigateToSynchronizationRoot" type="link"
      icon="/icons/drive_synced_under_root.png">
      <category>DOCUMENT_UPPER_ACTION</category>
      <filter-id>can_unsync_container</filter-id>
    </action>

    <action id="driveEdit" link="#{nuxeoDriveActions.driveEditURL}"
      order="51" label="command.driveEdit" type="bare_link" icon="/icons/drive_edit.png">
      <category>DOCUMENT_UPPER_ACTION</category>
      <filter-id>can_drive_edit</filter-id>
    </action>

  </extension>

  <extension target="org.nuxeo.ecm.platform.actions.ActionService"
    point="filters">

    <filter id="can_sync">
      <rule grant="true">
        <condition>#{canSynchronizeCurrentDocument}</condition>
      </rule>
    </filter>

    <filter id="can_unsync_current_doc">
      <rule grant="true">
        <condition>#{canUnSynchronizeCurrentDocument}</condition>
      </rule>
    </filter>

    <filter id="can_unsync_container">
      <rule grant="true">
        <condition>#{canUnSynchronizeContainer}</condition>
      </rule>
    </filter>

    <filter id="can_drive_edit">
      <rule grant="true">
        <condition>#{canEditCurrentDocument}</condition>
      </rule>
    </filter>
  </extension>

</component>
