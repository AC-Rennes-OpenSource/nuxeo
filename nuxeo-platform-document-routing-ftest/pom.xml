<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">


<modelVersion>4.0.0</modelVersion>

<parent>
 <groupId>org.nuxeo.ecm.platform</groupId>
 <artifactId>nuxeo-platform-document-routing</artifactId>
 <version>1.0-SNAPSHOT</version>
</parent>

<groupId>org.nuxeo.ecm.platform</groupId>
<artifactId>nuxeo-platform-document-routing-ftest</artifactId>
<packaging>pom</packaging>
<name>Nuxeo Platform Document Routing Addon Functionnal Tests</name>
<description>Nuxeo Platform Document Routing Functionnal Tests</description>
<build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <configuration>
          <artifactItems>
            <artifactItem>
              <groupId>org.seleniumhq.selenium.server</groupId>
              <artifactId>selenium-server</artifactId>
              <classifier>standalone</classifier>
              <overWrite>false</overWrite>
              <outputDirectory>selenium</outputDirectory>
              <destFileName>selenium-server.jar</destFileName>
            </artifactItem>
            <artifactItem>
       	     <groupId>org.nuxeo.ecm.distribution</groupId>
             <artifactId>nuxeo-distribution-jboss</artifactId>
             <version>${nuxeo.distribution.version}</version>
             <classifier>nuxeo-dm</classifier>
              <type>zip</type>
              <overWrite>false</overWrite>
              <outputDirectory>target</outputDirectory>
            </artifactItem>
            <artifactItem>
             <groupId>org.nuxeo.ecm.platform</groupId>
             <artifactId>nuxeo-platform-document-routing-api</artifactId>
             <overWrite>true</overWrite>
             <outputDirectory>target</outputDirectory>
            </artifactItem>
            <artifactItem>
              <groupId>org.nuxeo.ecm.platform</groupId>
              <artifactId>nuxeo-platform-document-routing-core</artifactId>
              <overWrite>true</overWrite>
              <outputDirectory>target</outputDirectory>
            </artifactItem>
            <artifactItem>
              <groupId>org.nuxeo.ecm.platform</groupId>
              <artifactId>nuxeo-platform-document-routing-web</artifactId>
              <overWrite>true</overWrite>
              <outputDirectory>target</outputDirectory>
            </artifactItem>
          </artifactItems>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
