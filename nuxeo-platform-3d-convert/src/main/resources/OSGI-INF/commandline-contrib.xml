<?xml version="1.0"?>
<component name="org.nuxeo.ecm.platform.threed.convert.commandline">

    <require>org.nuxeo.ecm.platform.commandline.executor.service.defaultContrib</require>

    <extension target="org.nuxeo.ecm.platform.commandline.executor.service.CommandLineExecutorComponent"
               point="command">

        <command name="blender_pipeline" enabled="true">
            <commandLine>blender</commandLine>
            <testParameterString>-v</testParameterString>
            <parameterString>-b -P #{script} -- --input #{inFilePath} --outdir #{outDir} --operators #{operators}
                --renderids #{renderIds} --lods #{lods} --dimensions #{dimensions} --coords #{coords}
            </parameterString>
            <installationDirective>You need to install blender (https://www.blender.org/download/)
            </installationDirective>
        </command>
        <command name="collada2gltlf" enabled="true">
            <commandLine>collada2gltf</commandLine>
            <parameterString>-f #{inFilePath} -o #{outFilePath} -e</parameterString>
            <installationDirective>You need to install collada2gltf for glTF 1.0
                (https://github.com/KhronosGroup/glTF/releases)
            </installationDirective>
        </command>
    </extension>

</component>